@model TextSnippet
<!-- Delete -->

 <form asp-action="Delete" asp-controller="TextSharing" method="post">
    <div class="form">
        <h4>TextSnippet</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.SnippetId)
        <div class="form-group">
            <label for="FileName">File Name (optional)</label>
            <input asp-for="FileName" class="form-control" placeholder="Program.cs" id="FileName" />
            <span asp-validation-for="FileName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description (optional)</label>
            <input asp-for="Description" class="form-control" placeholder="Description" id="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Tags">Tags (optional)</label>
            <input asp-for="Tags" class="form-control" placeholder="C#,Dotnet" id="Tags" />
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Snippet">Snippet</label>
            <textarea rows="10" asp-for="Snippet" class="form-control" id="Snippet" >

            </textarea>
            <span asp-validation-for="Snippet" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>

    </div>
</form>